<Page x:Class="Living_Fountain.Revenue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Revenue">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Width="196" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="20,20,0,0" Foreground="#2c61ec">REVENUE</TextBlock>
        </StackPanel>

        <Grid Margin="20,87,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Weekly Revenue Section -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="69,44,332,-24" Grid.ColumnSpan="3">
                <!-- Content of your Weekly Revenue section -->
            </ScrollViewer>

            <!-- Separator Line -->
            <Line X1="0" Y1="0" X2="0" Y2="1" Stroke="#FFE2E2E2" StrokeThickness="2" Stretch="Fill" Grid.Column="1"/>

            <!-- Monthly Revenue Section -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Margin="10">
                <Rectangle HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="359" Fill="#FF2C61EC"/>
            </ScrollViewer>

            <!-- Second Rectangle and Label -->
            <Rectangle Grid.Column="0" HorizontalAlignment="Center" Height="40" Margin="0,20,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="359" Fill="#FF2C61EC"/>
            <Label Grid.Column="0" Content="Weekly Revenue" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontWeight="SemiBold" FontSize="16" Foreground="White"/>

            <!-- Label for Monthly Revenue -->
            <Label Grid.Column="2" Content="Monthly Revenue" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
        </Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="478,-26,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
