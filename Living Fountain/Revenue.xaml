<Page x:Class="Living_Fountain.Revenue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Revenue">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Width="196" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="20,20,0,0" Foreground="#2c61ec">REVENUE</TextBlock>
        </StackPanel>

        <Grid Margin="20,87,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        <!-- Weekly Revenue Section -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="10">
            
            </ScrollViewer>

            <Line X1="0" Y1="0" X2="0" Y2="1" Stroke="Black" StrokeThickness="2" Stretch="Fill" Grid.Column="1"/>

            <!-- Monthly Revenue Section -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Margin="10">
               
            </ScrollViewer>

        </Grid>


    </Grid>
</Page>
