<Page x:Class="Living_Fountain.Revenue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Revenue">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Width="196" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="20,20,0,0" Foreground="#2c61ec">REVENUE</TextBlock>
        </StackPanel>

        <Grid Margin="20,87,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="10">


                    <!-- Weekly Revenue Items -->
                <StackPanel Margin="0,0,0,20">
                    <ItemsControl x:Name="WeeklyRevenueItemsControl" ItemsSource="{Binding WeeklyRevenues}" Margin="20,50,20,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="#FFE2E2E2" Margin="5,7" Padding="5" CornerRadius="5" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding DateRange}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        <Border Background="#2c61ec" CornerRadius="5" Grid.Column="1" Margin="5">
                                            <TextBlock Text="{Binding Revenue}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>


            <!-- Separator Line -->
            <Line X1="0" Y1="0" X2="0" Y2="1" Stroke="#FFE2E2E2" StrokeThickness="2" Stretch="Fill" Grid.Column="1"/>

            <!-- Monthly Revenue Section -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Margin="10">

                    <!-- Monthly Revenue Items -->
                <StackPanel Margin="0,0,0,20">
                    <ItemsControl x:Name="MonthlyRevenueItemsControl" ItemsSource="{Binding MonthlyRevenues}" Margin="20,50,20,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="#FFE2E2E2" Margin="5,7" Padding="5" CornerRadius="5" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Month}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        <Border Background="#2c61ec" CornerRadius="5" Grid.Column="1" Margin="5">
                                            <TextBlock Text="{Binding MonthlyTotal}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            
            
            <!-- Header Rectangles and Labels -->
            <Rectangle Grid.Column="0" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="450" Fill="#FF2C61EC"/>
            <Label Grid.Column="0" Content="Weekly Revenue" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Foreground="White"/>

            <Rectangle Grid.Column="2" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="450" Fill="#FF2C61EC"/>
            <Label Grid.Column="2" Content="Monthly Revenue" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Foreground="White"/>

        </Grid>
    </Grid>
</Page>