<Page x:Class="Living_Fountain.Revenue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Revenue">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Width="196" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="20,20,0,0" Foreground="#2c61ec">REVENUE</TextBlock>
        </StackPanel>
        
        <Grid Margin="20,87,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Weekly Revenue Section -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden" Margin="10">
                <StackPanel Margin="70">
                    <Expander Header="2024" IsExpanded="True" FontSize="16" FontWeight="SemiBold" Background="{x:Null}" Height="233">
                        <StackPanel Margin="20,10,0,20">
                            <Line X1="0" Y1="0" X2="1" Y2="0" Stroke="Black" StrokeThickness="1" Stretch="Fill" Margin="0,10"/>
                            <Expander Header="January" FontWeight="Normal" Background="{x:Null}"  Height="163">
                                <StackPanel Margin="10">
                                    <ListBox>
                                        <ListBoxItem Content="Week 1: $1000"/>
                                        <ListBoxItem Content="Week 2: $1200"/>
                                        <ListBoxItem Content="Week 3: $1300"/>
                                        <ListBoxItem Content="Week 4: $1500"/>
                                    </ListBox>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>


            <!-- Separator Line -->
            <Line X1="0" Y1="0" X2="0" Y2="1" Stroke="#FFE2E2E2" StrokeThickness="2" Stretch="Fill" Grid.Column="1"/>

            <!-- Monthly Revenue Section -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Hidden" Margin="10">
                <StackPanel Margin="70">
                    <Expander Header="2024" IsExpanded="True" FontWeight="SemiBold" FontSize="16">
                        <StackPanel Margin="20,10,0,20">
                            <Line X1="0" Y1="0" X2="1" Y2="0" Stroke="Black" StrokeThickness="1" Stretch="Fill" Margin="0,10"/>
                            <Expander Header="January" FontWeight="Normal">
                                <StackPanel Margin="10">
                                    <ListBox>
                                        <ListBoxItem Content="Monthly Total: $5000"/>
                                    </ListBox>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>

            <!-- Header Rectangles and Labels -->
            <Rectangle Grid.Column="0" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="450" Fill="#FF2C61EC"/>
            <Label Grid.Column="0" Content="Weekly Revenue" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Foreground="White"/>

            <Rectangle Grid.Column="2" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="#FF2C61EC" VerticalAlignment="Top" Width="450" Fill="#FF2C61EC"/>
            <Label Grid.Column="2" Content="Monthly Revenue" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
            
        </Grid>
    </Grid>
</Page>