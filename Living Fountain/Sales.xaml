<Page x:Class="Living_Fountain.Sales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sales">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock>Sales</TextBlock>
        </StackPanel>
        <DataGrid x:Name="OrderRecords" Grid.Row="1" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Block" Binding="{Binding block}" />
                <DataGridTextColumn Header="Lot" Binding="{Binding lot}" />
                <DataGridTextColumn Header="Phase" Binding="{Binding phase}" />
                <DataGridTextColumn Header="Product" Binding="{Binding product.product_desc}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding quantity}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Deliverer" Binding="{Binding deliverer.employee_name}" />
                <DataGridTextColumn Header="Status" Binding="{Binding status}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Edit button -->
                                <Button x:Name="editBtn" Content="Edit" Click="EditButtonClick" Margin="2" Tag="{Binding id}" />

                                <!-- Delete button -->
                                <Button x:Name="deleteBtn" Content="Delete" Margin="2" Tag="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
