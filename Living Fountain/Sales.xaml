<Page x:Class="Living_Fountain.Sales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="Sales">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="30*"/>
                <RowDefinition Height ="70*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height ="30*"/>
                    <RowDefinition Height ="30*"/>
                    <RowDefinition Height ="30*"/>
                    <RowDefinition Height ="40*"/>
                </Grid.RowDefinitions>
                <Button Content="Sales" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" FontSize="22" Click="Sales_Button_Click" Height="51" Width="120"/>
                <Button Content="Credits" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="1" Click="Credits_Button_Click" Height="50" Width="120" FontSize="22"/>
                <Button Content="Salary" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="2" Click="Salary_Button_Click" Height="50" Width="120" FontSize="22"/>
                <ComboBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="127" Grid.Row="3" Margin="0,33,0,0" Height="50" RenderTransformOrigin="0.5,0.5">
                    <ComboBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-1.562"/>
                            <RotateTransform/>
                            <TranslateTransform X="-0.723"/>
                        </TransformGroup>
                    </ComboBox.RenderTransform>
                </ComboBox>
            </Grid>
            <Image HorizontalAlignment="Center" Height="228" VerticalAlignment="Center" Width="223" Source="/logo.png"/>
        </Grid>

        <Border Grid.Column="1" Margin="20" CornerRadius="10">
            <StackPanel Margin="10">
                <!-- SALES & Add New Order Title -->
                <Label Content="SALES" HorizontalAlignment="Left" Margin="30,10,0,10" FontSize="40" FontWeight="Bold" Foreground="#3498db"/>
                <Label Content="Add New Order" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="30" FontWeight="Bold" Foreground="#3498db"/>

                <!-- Customer/Order Details & Submit Button -->
                <StackPanel Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="Customer" FontSize="25" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="1" Content="Order" FontSize="25" FontWeight="Bold" Foreground="#3498db"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="Block" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="1" Content="Lot" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="2" Content="Phase" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="3" Content="Type" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="4" Content="Quantity" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>
                        <Label Grid.Column="5" Content="Deliverer" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#3498db"/>

                        <TextBox Grid.Column="0" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                        <TextBox Grid.Column="2" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                        <ComboBox Grid.Column="3" Grid.Row="1" Width="150" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                        <TextBox Grid.Column="4" Grid.Row="1" Width="100" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                        <ComboBox Grid.Column="5" Grid.Row="1" Width="200" Height="30" Margin="5" BorderBrush="Transparent" BorderThickness="0"/>
                    </Grid>

                    <Button Content="Submit" Margin="0,20,0,10" Width="100" Height="30" Background="#3498db" Foreground="White" BorderBrush="Transparent" BorderThickness="0"/>
                </StackPanel>
                
                
                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="Order Records" FontSize="25" FontWeight="Bold" Foreground="#3498db" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Content="Filter by date: " HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="268,0,0,0"/>
                    <DatePicker Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>
                </Grid>
                
            </StackPanel>
        </Border>
    </Grid>
</Page>
