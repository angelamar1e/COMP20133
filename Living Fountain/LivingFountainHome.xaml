<Page x:Class="Living_Fountain.LivingFountainHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="Living Fountain - Home">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Gradient background -->
        <Rectangle Grid.Column="0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#5494E6" Offset="0.5" />
                    <GradientStop Color="#2551A9" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <!-- end of gradient -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="30*"/>
                <RowDefinition Height ="70*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height ="20*"/>
                    <RowDefinition Height ="20*"/>
                    <RowDefinition Height ="20*"/>
                    <RowDefinition Height ="20*"/>
                    <RowDefinition Height ="20*"/>
                </Grid.RowDefinitions>
                <Button Content="Sales" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" FontSize="22" Height="51" Width="120"/>
                <Button Content="Customer" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="1" Height="50" Width="120" FontSize="22"/>
                <Button Content="Credits" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="2" Height="50" Width="120" FontSize="22"/>
                <Button Content="Salary" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="3" Height="50" Width="120" FontSize="22"/>
                <Button Content="Revenue" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.101,-0.651" Grid.Row="4" Height="50" Width="120" FontSize="22"/>
            </Grid>
            <Image HorizontalAlignment="Center" Height="228" VerticalAlignment="Center" Width="223" Source="/logo.png"/>
        </Grid>
    </Grid>
</Page>
