<Page x:Class="Living_Fountain.Salary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Salary">

    <Grid Background="White">
        <StackPanel>
            <TextBlock FontSize="24" FontWeight="Bold" Margin="20,20,0,0">Salary</TextBlock>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle HorizontalAlignment="Left" Height="263" Margin="48,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="0"/>
            <Rectangle HorizontalAlignment="Left" Height="263" Margin="48,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="1"/>
            <Rectangle HorizontalAlignment="Left" Height="263" Margin="48,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="2"/>

            <StackPanel Grid.Column="0" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0" Text="Deliverers"/>
                <TextBlock FontSize="14" FontWeight="SemiBold" Margin="68,10,0,0" Text="Manuel" TextDecorations="Underline"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0" Text="Refillers"/>
                <TextBlock FontSize="14" FontWeight="SemiBold" Margin="68,10,0,0" Text="Chris" TextDecorations="Underline"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0" Text="Washers"/>
                <TextBlock FontSize="14" FontWeight="SemiBold" Margin="68,10,0,0" Text="Emma" TextDecorations="Underline"/>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
