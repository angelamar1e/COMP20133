<Page x:Class="Living_Fountain.Salary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Salary">

    <Grid Background="White">
        <StackPanel>
            <TextBlock FontSize="24" FontWeight="Bold" Margin="20,20,0,0">Salary</TextBlock>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Rectangle HorizontalAlignment="Left" Height="263" Margin="48,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="0"/>
            <Rectangle HorizontalAlignment="Center" Height="263" Margin="0,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="1"/>
            <Rectangle HorizontalAlignment="Center" Height="263" Margin="0,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="191" Grid.Column="2"/>

            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0">Deliverer</TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0">Refillers</TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Left" Margin="48,85,0,0">
                <TextBlock FontSize="16" FontWeight="Bold" Margin="20,20,0,0">Washer</TextBlock>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
