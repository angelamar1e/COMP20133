<Page x:Class="Living_Fountain.Salary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Living_Fountain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Salary">

    <Grid Background="White">
        <StackPanel>
            <TextBlock FontSize="30" FontWeight="Bold" Margin="20,20,0,0" Foreground="#FF098BFF">Salary</TextBlock>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="48,85,0,0">
                <Rectangle Height="263" Width="191" Stroke="#FFE2E2E2" RadiusX="20" RadiusY="20"/>
                <StackPanel Width="191" Height="263">
                    <Grid Height="45" Width="193" RenderTransformOrigin="0.49,1.015">
                        <Rectangle Fill="#FF098BFF" Stroke="#FF098BFF"/>
                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Deliverers"/>
                    </Grid>
                    <TextBlock FontSize="40" FontWeight="SemiBold" Margin="20,50,0,10" HorizontalAlignment="Left" Text="Manuel" TextDecorations="Underline" Width="148" Foreground="#FF098BFF"/>
                    <Image Source="/icon_trolley.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Bottom"/>
                    <Image Source="/icon_peso.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" Margin="40,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>


            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="48,85,0,0">
                <Rectangle Height="263" Width="191" Stroke="#FFE2E2E2" RadiusX="20" RadiusY="20"/>
                <StackPanel Width="191" Height="263">
                    <Grid Height="45" Width="193" RenderTransformOrigin="0.49,1.015">
                        <Rectangle Fill="#FF098BFF" Stroke="#FF098BFF"/>
                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Refillers"/>
                    </Grid>
                    <TextBlock FontSize="35" FontWeight="SemiBold" Margin="20,50,0,10" HorizontalAlignment="Left" Text="Chris" TextDecorations="Underline" Width="148" Foreground="#FF098BFF"/>
                    <Image Source="/icon_trolley.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Bottom"/>
                    <Image Source="/icon_peso.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" Margin="40,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>

            
            <Grid Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="48,85,0,0">
                <Rectangle Height="263" Width="191" Stroke="#FFE2E2E2" RadiusX="20" RadiusY="20"/>
                <StackPanel Width="191" Height="263">
                    <Grid Height="45" Width="193" RenderTransformOrigin="0.49,1.015">
                        <Rectangle Fill="#FF098BFF" Stroke="#FF098BFF"/>
                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Washers"/>
                    </Grid>
                    <TextBlock FontSize="35" FontWeight="SemiBold" Margin="20,50,0,10" HorizontalAlignment="Left" Text="Emma" TextDecorations="Underline" Width="148" Foreground="#FF098BFF"/>
                    <Image Source="/icon_trolley.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Bottom"/>
                    <Image Source="/icon_peso.png" Height="30" Width="23" RenderTransformOrigin="-0.892,1.067" Margin="40,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Page>
